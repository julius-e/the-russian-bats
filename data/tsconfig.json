{
  "compilerOptions": {
    "allowJs": false,
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["es2015", "es2017"],
    "declaration": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "**/node_modules",
    "**/gulpfile.js",
    "**/karma.conf.js",
    "**/lib"
  ]
}

